<?xml version="1.0" encoding="utf-8"?>
<com.gcrj.projectcontrol.view.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:saveEnabled="false"
    tools:context=".activity.NewSubProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".activity.NewSubProjectActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_sub_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/et_sub_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sub_project_name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.gcrj.projectcontrol.view.FlowGroupView
            android:id="@+id/flow_group_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="截止日期：2018-10-11" />

        <Button
            android:id="@+id/btn_new_sub_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/new_sub_project" />

    </LinearLayout>

</com.gcrj.projectcontrol.view.LoadingLayout>